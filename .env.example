# Application
APP_NAME=HR Management System
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
APP_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
APP_TIMEZONE=Asia/Ho_Chi_Minh

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hr_management
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=100
REDIS_MIN_IDLE_CONNS=10
REDIS_MAX_RETRIES=3
REDIS_CACHE_TTL=15m

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
JWT_ISSUER=hr-management-system
JWT_AUDIENCE=hr-management-users

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@hrms.com
EMAIL_FROM_NAME=HR Management System
EMAIL_ENABLE_TLS=true

# Elasticsearch
ELASTIC_URL=http://localhost:9200
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=changeme
ELASTIC_INDEX=hr_management

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=20
RATE_LIMIT_BLOCK_DURATION=1h

# Security
BCRYPT_COST=12
OTP_LENGTH=6
OTP_EXPIRY=5m
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30m
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=24h
CSRF_TOKEN_EXPIRY=1h
ALLOWED_ORIGINS=*
TRUSTED_PROXIES=127.0.0.1
ENABLE_IP_WHITELIST=false

# Logger
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=both
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=5
LOG_COMPRESS=true

# Worker
WORKER_CONCURRENCY=10
WORKER_RETRY_MAX=3
WORKER_RETRY_DELAY=10s
